<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plak.chapogame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/carachapo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.ActivityMenu"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ActivitySettings"
            android:label="@string/title_activity_activity_settings"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activities.ActivityGameOver"
            android:label="@string/title_activity_activity_game_over"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ActivityScore"
            android:label="@string/title_activity_activity_score"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ActivityScores"
            android:label="Highscores"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activities.ActivityInstructions"
            android:label="Instrucciones"
            android:screenOrientation="sensorLandscape" />
    </application>

</manifest>
